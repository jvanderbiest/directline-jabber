{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Directline Secret + file",
            "program": "${workspaceFolder}\\src\\app.ts",
            "args": [
                "test", "--files", "c:\\chatdown\\azure-bootcamp-demo.chat", "-s", "YOUR_SECRET", "-v"
             ],
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Token endpoint + files",
            "program": "${workspaceFolder}\\src\\app.ts",
            "args": [
                "test", "--files", "c:\\chatdown\\staging.chat,c:\\chatdown\\staging.chat", "--endpoint", "https:///token", "-v"
             ],
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Token endpoint + folders",
            "program": "${workspaceFolder}\\src\\app.ts",
            "args": [
                "test", "--dirs", "c:\\chat-tests", "--endpoint", "https:///token", "-v", "-r"
             ],
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--file",
                "${workspaceFolder}/src/@types/chatdown.ts",
                "-r",
                "node_modules/ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/**/*.spec.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        }
        
    ]
}