    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build Project",
            "program": "${workspaceFolder}\\src\\app.ts",
            "args": [
                "test", "c:\\chatdown\\azure-bootcamp-demo.chat", "-s", "YOUR_SECRET", "-v"
