{
  "name": "directline-jabber",
  "version": "1.0.0",
  "description": "uses chatdown to generate transcript files to automate testing using a directline connection",
  "main": "out/app.js",
  "scripts": {
    "test": "mocha --opts mocha.opts",
    "test-coverage": "nyc mocha --opts mocha.opts",
    "prestart": "npm run build",
    "build": "tsc",
    "buildserver": "npm run test-coverage",
    "start": "node out/app.js"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "all": true,
    "exclude": [
      "src/app.ts",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvanderbiest/directline-jabber.git"
  },
  "keywords": [
    "botframework",
    "directline",
    "automated",
    "testing",
    "chatdown",
    "transcript",
    "chat"
  ],
  "author": "Jonas Van der Biest",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jvanderbiest/directline-jabber/issues"
  },
  "homepage": "https://github.com/jvanderbiest/directline-jabber#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-spies": "^1.0.0",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^5.2.6",
    "@types/npmlog": "^4.1.1",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "chatdown": "^1.2.0",
    "coveralls": "^3.0.3",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mock-require": "^3.0.3",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "path": "^0.12.7",
    "read-text-file": "^1.1.0",
    "request": "^2.88.0",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0"
  },
  "dependencies": {
    "@types/node": "^11.13.7",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.42",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "npmlog": "^4.1.2",
    "readdirp": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "request-promise": "^4.2.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.4.4"
  }
}
